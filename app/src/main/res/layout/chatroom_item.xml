<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/row_padding"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_chatroom_thumbnail"
        android:layout_width="@dimen/thumbnail"
        android:layout_height="@dimen/thumbnail"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/row_padding"
        android:layout_marginEnd="@dimen/row_padding" />

    <TextView
        android:id="@+id/tv_chatroom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_chatroom_thumbnail"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/contact_name"
        android:textSize="@dimen/contact_name"
        android:layout_toEndOf="@id/iv_chatroom_thumbnail" />

    <TextView
        android:id="@+id/tv_recent_messsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chatroom_name"
        android:layout_toRightOf="@id/iv_chatroom_thumbnail"
        android:textColor="@color/contact_number"
        android:textSize="@dimen/contact_number"
        android:layout_toEndOf="@id/iv_chatroom_thumbnail" />

</RelativeLayout>